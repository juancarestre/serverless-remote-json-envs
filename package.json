{
  "name": "serverless-remote-json-envs",
  "version": "1.1.0",
  "description": "Serverless framework plugin for supporting remote JSON files being parsed as environment variables for AWSLambda",
  "main": "RemoteJSONEnvs.js",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha '!(node_modules)/**/*.test.js' '*.test.js'",
    "coverage": "nyc npm test",
    "test:watch": "_mocha '!(node_modules)/**/*.test.js' '*.test.js' --watch",
    "fmt": "eslint . --fix --cache"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "author": "https://github.com/juancarestre",
  "license": "MIT",
  "peerDependencies": {
    "serverless": "3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup-tests.js"
    ]
  },
  "devDependencies": {
    "serverless": "^3.21.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juancarestre/serverless-remote-json-envs"
  }
}